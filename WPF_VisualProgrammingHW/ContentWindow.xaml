            </StackPanel>
        </Button>
        <Frame 
            x:Name="MyFrame" Grid.Column="1" HorizontalAlignment="Left" Height="390" Margin="12,121,0,0" VerticalAlignment="Top" Width="723" NavigationUIVisibility="Hidden" 
            />

    </Grid>
