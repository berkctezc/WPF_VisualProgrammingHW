        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="767*"/>
        </Grid.ColumnDefinitions>
        <Button  Grid.Column="1" Margin="0,15,682,0" HorizontalAlignment="Right" Width="67" Height="85" VerticalAlignment="Top"
